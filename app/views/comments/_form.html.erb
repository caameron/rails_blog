<%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <p>
        <%= form.label :commentor %> <br>
        <%= form.text_field :commentor %> <br>
    </p>
    <p>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>